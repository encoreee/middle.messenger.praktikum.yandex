---
enter: Сохранить
---

<html>
  <head>
    <link rel="stylesheet" href="../styles/changeDataPage.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="page">
      <div class="change-data-area">
         <div class="personal-area">
            <div class="personal-area__avatar-wrapper">
              <img
                class="personal-area__avatar"
                src="../../static/foto.jpg"
                alt="ava"
              />
            </div>
            <div class="personal-area__label-wrapper">
              <p class="personal-area__label"><b>Александр</b></p>
            </div>
          </div>
         <div class="align-area">
          <div class="label-area">
             {{> mainPageLabel label="Изменение данных" }}
          </div>
          <div>
            <form class="change-data-form">
              <input class="change-data-form__input" id="mail" name="mail" placeholder="Почта"/>
              <input class="change-data-form__input" id="login" name="login" placeholder="Имя пользователя"/>
              <input class="change-data-form__input" id="name" name="name" placeholder="Имя"/>
              <input class="change-data-form__input" id="lastname" name="lastname" placeholder="Фамилия"/>
               <button class="change-data-form__button">{{enter}}</button>
            </form>
             <a href="./chatStartPage.hbs" class="label-area__link-label ">Сохранить</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>