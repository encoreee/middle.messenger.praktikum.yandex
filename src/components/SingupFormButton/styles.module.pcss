@import url('../../styles/appStyles.pcss');

.singupform__button {
  height: 3rem;
  display: block;
  width: 100%;
  margin-top: 20px;
  margin-bottom: 10px;
  font-family: inherit;
  border: 0 solid;
  border-radius: 10px;
